def place_ship_on_grid(row, col, direction, length):

    if direction == "left":
        if col - length < 0:
            return False

    if direction == "right":
        if col + length >grid:
            return False

    if direction == "up":
        if row - length < 0:
            return False

    if direction == "down":
        if row + length >grid_size:
            return False
